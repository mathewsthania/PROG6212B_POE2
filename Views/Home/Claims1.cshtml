@{
    ViewData["Title"] = "Claim Status";
}

@model IEnumerable<PROG_POE2.Models.ClaimModel>

<!--ADDING IN CANVA DESIGN I CREATED FOR THE HEADINGS-->
<img src="~/css/ClaimStatus.png" alt="ClaimStatusImage" style="width: 100%; height: auto;">

<div class="claimStatus-container">
    <table class="claimStatus-table">
        <thead>
            <tr>
                <th>Claim ID</th>
                <th>Lecturer First Name</th>
                <th>Lecturer Last Name</th>
                <th>Claim Period (From)</th>
                <th>Claim Period (To)</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var claim in Model)
                {
                    <tr>
                        <td>@claim.ClaimID</td>
                        <td>@claim.LecturerFirstName</td>
                        <td>@claim.LecturerLastName</td>
                        <td>@claim.ClaimStartDate.ToString("yyyy-MM-dd")</td>
                        <td>@claim.ClaimEndDate.ToString("yyyy-MM-dd")</td>
                        <td class="@("status-" + claim.Status.ToLower())">@claim.Status</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" style="font family: 'Century Gothic', sans-serifstyle; text-align:center;">No claims were found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .claimStatus-container {
        max-width: 800px;
        margin: 50px auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 8px;
        background-color:lightgrey;
    }

    .claimStatus-table {
        width: 100%;
        border-collapse: collapse;
    }

    .claimStatus-table th, .claimStatus-table td{
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
    }
    .claimStatus-table th{
        background-color: #f4f4f4;
    }

    /*adding in the css style for the different statuses*/
    .status-pending {
        background-color: dimgrey;
    }

    .status-approved {
        background-color: greenyellow;
    }

    .status-rejected {
        background-color:red;
    }
</style>

